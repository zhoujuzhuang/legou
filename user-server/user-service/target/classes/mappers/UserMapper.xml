<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjz.mapper.UserMapper">
	<resultMap id="BaseResultMap" type="com.kimleysoft.entity.User" autoMapping="true">
	</resultMap>
	<sql id="query_Where_Clause">
		<if test="id != null">
			AND id = #{id}
		</if>
		<if test="name != null">
			AND name = #{name}
		</if>
		<if test="sex != null">
			AND sex = #{sex}
		</if>
		<if test="age != null">
			AND age = #{age}
		</if>
	</sql>
	<select id="selectUser" parameterType="com.kimleysoft.entity.User" resultMap="BaseResultMap">
		select
		*
		from tb_user
		<where>
			<include refid="query_Where_Clause" />
		</where>
	</select>
	
</mapper>